<?xml version="1.0"?>
<robot name="picar_x">
  <!-- Dimensions et propriétés physiques du PiCar X -->
  <!-- Basé sur les spécifications fournies -->
  
  <!-- Couleurs -->
  <material name="blue">
    <color rgba="0 0 0.8 1"/>
  </material>
  <material name="black">
    <color rgba="0 0 0 1"/>
  </material>
  <material name="white">
    <color rgba="1 1 1 1"/>
  </material>
  <material name="red">
    <color rgba="0.8 0 0 1"/>
  </material>

  <!-- Base du châssis -->
  <link name="base_link">
    <visual>
      <geometry>
        <box size="0.15 0.12 0.02"/>
      </geometry>
      <material name="blue"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.15 0.12 0.02"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.35"/>
      <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
      <!-- Centre de gravité bas comme spécifié -->
      <origin xyz="0 0 -0.01" rpy="0 0 0"/>
    </inertial>
  </link>

  <!-- Roue arrière gauche -->
  <link name="wheel_left">
    <visual>
      <geometry>
        <cylinder length="0.02" radius="0.03"/>
      </geometry>
      <material name="black"/>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.02" radius="0.03"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.03"/>
      <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/>
    </inertial>
  </link>

  <joint name="wheel_left_joint" type="continuous">
    <parent link="base_link"/>
    <child link="wheel_left"/>
    <origin xyz="-0.06 0.065 0" rpy="1.5708 0 0"/>
    <axis xyz="0 0 1"/>
    <!-- Propriétés du moteur DC -->
    <dynamics damping="0.1" friction="0.1"/>
  </joint>

  <!-- Roue arrière droite -->
  <link name="wheel_right">
    <visual>
      <geometry>
        <cylinder length="0.02" radius="0.03"/>
      </geometry>
      <material name="black"/>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.02" radius="0.03"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.03"/>
      <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/>
    </inertial>
  </link>

  <joint name="wheel_right_joint" type="continuous">
    <parent link="base_link"/>
    <child link="wheel_right"/>
    <origin xyz="-0.06 -0.065 0" rpy="1.5708 0 0"/>
    <axis xyz="0 0 1"/>
    <!-- Propriétés du moteur DC -->
    <dynamics damping="0.1" friction="0.1"/>
  </joint>

  <!-- Mécanisme de direction avant -->
  <link name="steering_link">
    <visual>
      <geometry>
        <box size="0.03 0.08 0.01"/>
      </geometry>
      <material name="red"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.03 0.08 0.01"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.05"/>
      <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/>
    </inertial>
  </link>

  <joint name="steering_joint" type="revolute">
    <parent link="base_link"/>
    <child link="steering_link"/>
    <origin xyz="0.06 0 -0.01" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <!-- Limites du servomoteur de direction -->
    <limit lower="-0.5236" upper="0.5236" effort="10" velocity="1.0472"/>
    <!-- ±30 degrés, vitesse 60°/s -->
    <dynamics damping="0.5" friction="0.2"/>
  </joint>

  <!-- Roue avant gauche -->
  <link name="front_wheel_left">
    <visual>
      <geometry>
        <cylinder length="0.02" radius="0.03"/>
      </geometry>
      <material name="black"/>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.02" radius="0.03"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.03"/>
      <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/>
    </inertial>
  </link>

  <joint name="front_wheel_left_joint" type="continuous">
    <parent link="steering_link"/>
    <child link="front_wheel_left"/>
    <origin xyz="0 0.045 0" rpy="1.5708 0 0"/>
    <axis xyz="0 0 1"/>
    <dynamics damping="0.05" friction="0.05"/>
  </joint>

  <!-- Roue avant droite -->
  <link name="front_wheel_right">
    <visual>
      <geometry>
        <cylinder length="0.02" radius="0.03"/>
      </geometry>
      <material name="black"/>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.02" radius="0.03"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.03"/>
      <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/>
    </inertial>
  </link>

  <joint name="front_wheel_right_joint" type="continuous">
    <parent link="steering_link"/>
    <child link="front_wheel_right"/>
    <origin xyz="0 -0.045 0" rpy="1.5708 0 0"/>
    <axis xyz="0 0 1"/>
    <dynamics damping="0.05" friction="0.05"/>
  </joint>

  <!-- Support de caméra -->
  <link name="camera_mount">
    <visual>
      <geometry>
        <box size="0.04 0.04 0.02"/>
      </geometry>
      <material name="black"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.04 0.04 0.02"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.02"/>
      <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/>
    </inertial>
  </link>

  <joint name="camera_mount_joint" type="fixed">
    <parent link="base_link"/>
    <child link="camera_mount"/>
    <origin xyz="0.06 0 0.02" rpy="0 0 0"/>
  </joint>

  <!-- Servomoteur pan (rotation horizontale) -->
  <link name="camera_pan_link">
    <visual>
      <geometry>
        <box size="0.03 0.03 0.01"/>
      </geometry>
      <material name="white"/>
    </visual>
    <inertial>
      <mass value="0.01"/>
      <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/>
    </inertial>
  </link>

  <joint name="camera_pan_joint" type="revolute">
    <parent link="camera_mount"/>
    <child link="camera_pan_link"/>
    <origin xyz="0 0 0.015" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <!-- Limites du servomoteur pan ±45° -->
    <limit lower="-0.7854" upper="0.7854" effort="5" velocity="1.0472"/>
    <dynamics damping="0.5" friction="0.1"/>
  </joint>

  <!-- Servomoteur tilt (inclinaison verticale) -->
  <link name="camera_tilt_link">
    <visual>
      <geometry>
        <box size="0.03 0.03 0.01"/>
      </geometry>
      <material name="white"/>
    </visual>
    <inertial>
      <mass value="0.01"/>
      <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/>
    </inertial>
  </link>

  <joint name="camera_tilt_joint" type="revolute">
    <parent link="camera_pan_link"/>
    <child link="camera_tilt_link"/>
    <origin xyz="0 0 0.01" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <!-- Limites du servomoteur tilt ±20° -->
    <limit lower="-0.3491" upper="0.3491" effort="5" velocity="1.0472"/>
    <dynamics damping="0.5" friction="0.1"/>
  </joint>

  <!-- Caméra -->
  <link name="camera_link">
    <visual>
      <geometry>
        <box size="0.02 0.02 0.02"/>
      </geometry>
      <material name="black"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.02 0.02 0.02"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.01"/>
      <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/>
    </inertial>
  </link>

  <joint name="camera_joint" type="fixed">
    <parent link="camera_tilt_link"/>
    <child link="camera_link"/>
    <origin xyz="0 0 0.015" rpy="0 0 0"/>
  </joint>

  <!-- Capteur ultrason -->
  <link name="ultrasonic_link">
    <visual>
      <geometry>
        <box size="0.02 0.04 0.01"/>
      </geometry>
      <material name="blue"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.02 0.04 0.01"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.01"/>
      <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/>
    </inertial>
  </link>

  <joint name="ultrasonic_joint" type="fixed">
    <parent link="base_link"/>
    <child link="ultrasonic_link"/>
    <origin xyz="0.075 0 0.01" rpy="0 0 0"/>
  </joint>

  <!-- Capteur IR gauche -->
  <link name="ir_left_link">
    <visual>
      <geometry>
        <box size="0.01 0.01 0.005"/>
      </geometry>
      <material name="red"/>
    </visual>
    <inertial>
      <mass value="0.005"/>
      <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/>
    </inertial>
  </link>

  <joint name="ir_left_joint" type="fixed">
    <parent link="base_link"/>
    <child link="ir_left_link"/>
    <origin xyz="0.06 0.04 -0.015" rpy="0 0 0"/>
  </joint>

  <!-- Capteur IR droit -->
  <link name="ir_right_link">
    <visual>
      <geometry>
        <box size="0.01 0.01 0.005"/>
      </geometry>
      <material name="red"/>
    </visual>
    <inertial>
      <mass value="0.005"/>
      <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/>
    </inertial>
  </link>

  <joint name="ir_right_joint" type="fixed">
    <parent link="base_link"/>
    <child link="ir_right_link"/>
    <origin xyz="0.06 -0.04 -0.015" rpy="0 0 0"/>
  </joint>

  <!-- Capteur IMU -->
  <link name="imu_link">
    <visual>
      <geometry>
        <box size="0.02 0.02 0.005"/>
      </geometry>
      <material name="white"/>
    </visual>
    <inertial>
      <mass value="0.01"/>
      <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/>
    </inertial>
  </link>

  <joint name="imu_joint" type="fixed">
    <parent link="base_link"/>
    <child link="imu_link"/>
    <origin xyz="0 0 0.01" rpy="0 0 0"/>
  </joint>

  <!-- Gazebo plugins seront ajoutés séparément -->
</robot>